{
  "name": "json-ld-proxy-server",
  "version": "1.0.0",
  "description": "Proxy server for JSON-LD Schema Viewer to bypass CORS",
  "main": "electron/main.js",
  "packageManager": "pnpm@10.12.4",
  "author": "BoxPistols",
  "homepage": "https://json-ld-view.vercel.app/",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "electron:dev": "electron .",
    "electron:build": "electron-builder --mac --win",
    "electron:build:mac": "electron-builder --mac",
    "electron:build:win": "electron-builder --win",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test-storybook": "test-storybook",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:css": "stylelint 'public/styles/**/*.css'",
    "lint:css:fix": "stylelint 'public/styles/**/*.css' --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "fix": "npm run format && npm run lint:fix && npm run lint:css:fix",
    "check-css": "node scripts/check-css-usage.js",
    "purge-css": "purgecss --config purgecss.config.js --output public/styles/dist",
    "validate": "npm run lint && npm run lint:css && npm run check-css",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:summary": "vitest run 2>&1 | node tests/test-summary.js",
    "test:security": "node tests/verify-security.js"
  },
  "dependencies": {
    "@vercel/kv": "^2.0.0",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "iconv-lite": "^0.7.0",
    "jschardet": "^3.1.4",
    "openai": "^6.6.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^6.0.0",
    "@storybook/addon-a11y": "8.6.14",
    "@storybook/addon-essentials": "8.6.14",
    "@storybook/addon-interactions": "8.6.14",
    "@storybook/html": "8.6.14",
    "@storybook/html-vite": "8.6.14",
    "@storybook/test": "8.6.14",
    "electron": "^39.1.2",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jsdom": "^24.1.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "purgecss": "^6.0.0",
    "storybook": "8.6.14",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "supertest": "^7.0.0",
    "vite": "^7.2.2",
    "vitest": "^2.1.4"
  },
  "build": {
    "appId": "com.boxpistols.json-ld-viewer",
    "productName": "JSON-LD Schema Viewer",
    "files": [
      "electron/**/*",
      "server.js",
      "lib/**/*",
      "public/**/*",
      "api/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "public/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "public/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "public/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  }
}
